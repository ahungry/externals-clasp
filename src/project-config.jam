# Boost.Build Configuration
# Automatically generated by bootstrap.sh

import option ;
import feature ;
import os ;


# List of --with-<library> and --without-<library>
# options. If left empty, all libraries will be built.
# Options specified on the command line completely
# override this variable.
libraries =  --with-filesystem --with-date_time --with-serialization --with-iostreams --with-program_options --with-regex --with-python --with-system  --with-thread ;

# use mpi --with-mpi

# These settings are equivalent to corresponding command-line
# options.
local brcl_home = [ os.environ BRCL_HOME ] ;
local APP_RESOURCES_DIR = [ os.environ BRCL_APP_RESOURCES_EXTERNALS_RELEASE_DIR ] ;
local APP_LIB_DIR = $(APP_RESOURCES_DIR)/lib ;
local APP_INCLUDE_DIR = $(APP_RESOURCES_DIR)/include ;
option.set prefix : $(APP_RESOURCES_DIR) ;
option.set exec-prefix : $(APP_RESOURCES_DIR) ;
option.set libdir : $(APP_LIB_DIR) ;
option.set includedir : $(APP_INCLUDE_DIR) ;

# Stop on first error
option.set keep-going : false ;
